

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NeoDebuggerUI.ViewModels;assembly=NeoDebuggerUI"
        xmlns:AvalonEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        Icon="resm:NeoDebuggerUI.Assets.avalonia-logo.ico"
        Title="NeoDebuggerUI"
        Background="LightGray"
        Width="500"
        Height="600">
  <Window.DataContext>
      <vm:InvokeWindowViewModel/>
  </Window.DataContext>

    <DockPanel LastChildFill="True">
      <Button Name="DebugBtn" DockPanel.Dock="Bottom" Margin="5" Width="200">Debug</Button>
      <TabControl>
        <TabItem Header="Methods">
          <DockPanel LastChildFill="True">
            <Grid Name="InputParametersGrid" DockPanel.Dock="Bottom" Margin="5, 5, 5, 0">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
              </Grid.ColumnDefinitions>
            </Grid>
            <DockPanel
              LastChildFill="True">
              <ListBox
                DockPanel.Dock="Left"
                Width="180"
                Margin="0, 0, 5, 0"
                Name="Functions"
                Items="{Binding FunctionList}"
                SelectedItem="{Binding SelectedFunction}" />
              <ListBox
                Name="TestCases"
                Items="{Binding TestCases}"
                SelectedItem="{Binding SelectedTestCase}" />
            </DockPanel>
          </DockPanel>
        </TabItem>
        <TabItem Header="Transaction">
          <DockPanel Margin="5">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
              <TextBox
                Width="200"
                Text="{Binding AssetAmount}"/>
              <DropDown
                Width="100"
                Name="AssetBox"
                Items="{Binding AssetItems}"
                SelectedItem="{Binding SelectedAsset}">
              </DropDown>
            </StackPanel>
            <TextBlock
              DockPanel.Dock="Bottom"
              Text="Asset Transfer"/>
            <DockPanel DockPanel.Dock="Top">
              <TextBlock
                Margin="0,0,5,0"
                DockPanel.Dock="Left"
                Text="Invoker Adress"/>
              <TextBlock
                FontWeight="Bold"
                Text="{Binding PrivateKeyAddress}"/>
            </DockPanel>
            <DockPanel DockPanel.Dock="Bottom">
              <Button Name="RemovePrivateKey" DockPanel.Dock="Right">-</Button>
              <Button Name="AddPrivateKey" DockPanel.Dock="Right">+</Button>
              <TextBlock
                DockPanel.Dock="Top"
                Text="Load Private Key"/>
              <TextBox Text="{Binding InputPrivateKey}"/>
            </DockPanel>
            <ListBox
              Name="PrivateKeys"
              Items="{Binding PrivateKeys}"
              SelectedItem="{Binding SelectedPrivateKey}" />
          </DockPanel>
        </TabItem>
        <TabItem Header="Options">
          <DockPanel LastChildFill="True">
            <DockPanel
              LastChildFill="False"
              DockPanel.Dock="Left"
              Margin="5">
              <TextBlock Height="35"
                DockPanel.Dock="Top"
                Text="Trigger"/>
              <TextBlock Height="35"
                DockPanel.Dock="Top"
                Text="Check Witness"/>
              <TextBlock Height="35"
                DockPanel.Dock="Top"
                Text="Timestamp"/>
              <TextBlock
                DockPanel.Dock="Top"
                Text="Raw Script"/>
            </DockPanel>
            <DropDown Height="30"
              Margin="0,0,0,5"
              DockPanel.Dock="Top"
              Items="{Binding Trigger}"
              SelectedItem="{Binding SelectedTrigger}">
            </DropDown>
            <DropDown Height="30"
              Margin="0,0,0,5"
              DockPanel.Dock="Top"
              Items="{Binding Witness}"
              SelectedItem="{Binding SelectedWitness}">
            </DropDown>
            <DockPanel LastChildFill="True"
              DockPanel.Dock="Top"
              Margin="0,0,0,5">
              <TextBox Width="100"
                DockPanel.Dock="Left"
                Text="{Binding Timestamp}"/>
              <DatePicker Height="30"
                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                SelectedDateFormat="Long"/>
            </DockPanel>
            <TextBox
              Name="RawScriptText"/>
          </DockPanel>
        </TabItem>
      </TabControl>
    
    </DockPanel>
</Window>